<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.AccountFragment">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="6dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/img1"
                android:src="@mipmap/ic_launcher"
                app:civ_border_width="0dp"
                app:civ_border_color="#00000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtfnam"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img1"
                android:fontFamily="@font/inter_regular"
                android:textSize="25sp"
                android:text="First Name"
                android:layout_marginStart="15dp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtfnam"
                android:id="@+id/txtnam"
                android:layout_toRightOf="@+id/img1"
                android:fontFamily="@font/inter_regular"
                android:textSize="25sp"
                android:text="Last Name"
                android:layout_marginStart="15dp"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:elevation="20dp"
        android:backgroundTint="@color/white">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Settings"
            android:fontFamily="@font/inter_regular"
            android:textSize="30dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:elevation="30dp"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_regular"
            android:drawableLeft="@drawable/baseline_person_24"
            android:text="Profile"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:elevation="30dp"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/baseline_settings_24"
            android:text="Additional Settings"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="30dp"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/inter_regular"
            android:drawableLeft="@drawable/baseline_dark_mode_24"
            android:text="Night Mode"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:elevation="30dp"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_regular"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/baseline_whatshot_24"
            android:text="About Us"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="30dp"
        android:layout_marginTop="1dp"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/txtsignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:onClick="signOut"
            android:fontFamily="@font/inter_regular"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:text="Log Out"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>



</LinearLayout>