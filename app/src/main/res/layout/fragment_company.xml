<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    tools:context=".fragments.CompanyFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtCompany"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:fontFamily="@font/inter_regular"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/purple_700"
        android:textSize="30sp"
        android:text="REGISTER"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crdCompName"
        android:layout_marginTop="30dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtCompanyName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:fontFamily="@font/inter_regular"
            android:hint="*Company Name"
            android:paddingStart="12dp"
            android:paddingTop="15dp"
            tools:ignore="TouchTargetSizeCheck" />


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crdCompEmail"
        android:layout_marginTop="30dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtCompanyEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:fontFamily="@font/inter_regular"
            android:hint="*Email"
            android:paddingStart="12dp"
            android:paddingTop="15dp"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crdCompPass"
        android:layout_marginTop="30dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtCompanyPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:fontFamily="@font/inter_regular"
            android:hint="*Password"
            android:paddingStart="12dp"
            android:paddingTop="15dp"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crdCompCity"
        android:layout_marginTop="30dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtCompanyCity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:fontFamily="@font/inter_regular"
            android:hint="*City"
            android:paddingStart="12dp"
            android:paddingTop="15dp"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crdFirstName"
        android:layout_marginTop="30dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtCompanyAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:fontFamily="@font/inter_regular"
            android:hint="*Address"
            android:paddingStart="12dp"
            android:paddingTop="15dp"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_700"
        android:fontFamily="@font/inter_regular"
        android:elevation="8dp"
        android:text="Submit"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>