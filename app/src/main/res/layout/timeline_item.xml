<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#edf2fb"
        tools:context=".fragments.TimelineFragment">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:scaleY="2"
            android:scaleX="3"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content">

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/FrstNane"
                android:textSize="40sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/purple_700"
                android:layout_marginStart="20dp"
                android:text="Talia"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/lstName"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/purple_700"
                android:text="Sasha"
                android:textSize="40sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             ></TextView>

        </LinearLayout>


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:contentDescription="rating" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="orem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
            android:textColor="@color/black"
            android:textSize="15sp"
            android:padding="10dp"
            tools:ignore="VisualLintLongText">

        </TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/rateButton"
                android:layout_width="150dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/inter_regular"
                android:background="@drawable/rounded"
                android:layout_height="wrap_content"
                android:text="Rate" />
            <Button
                android:id="@+id/contactButton"
                android:layout_width="150dp"
                android:fontFamily="@font/inter_regular"
                android:background="@drawable/rounded"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:text="Contact" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="50dp"
            android:elevation="80dp"
            android:layout_height="match_parent">


            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:contentDescription="tabs"
                android:layout_height="wrap_content">
            </com.google.android.material.tabs.TabLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>