<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:fontFamily="@font/inter_regular"
    tools:context=".ui.settings.SettingsFragment">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:elevation="20dp"
        android:backgroundTint="@color/white">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Settings"
            android:fontFamily="@font/inter_regular"
            android:textSize="30dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="30dp"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/baseline_settings_24"
            android:text="Additional Settings"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="60dp"
        android:elevation="30dp"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter_regular"
            android:drawableLeft="@drawable/baseline_dark_mode_24"
            android:text="Night Mode"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:elevation="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter_regular"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/baseline_whatshot_24"
            android:text="About Us"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="30dp"
        android:layout_marginTop="1dp"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/txtsignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:drawablePadding="10dp"
            android:onClick="signOut"
            android:fontFamily="@font/inter_regular"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:text="Log Out"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>